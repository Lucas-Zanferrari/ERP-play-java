# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                controllers.Application.index

GET     /login                           controllers.Application.login()
GET     /logout                          controllers.Application.logout()
POST    /login                           controllers.Application.authenticate()

GET     /novo_funcionario                controllers.FuncionarioController.index()
POST    /novo_funcionario                controllers.FuncionarioController.create()
GET    /funcionarios                    controllers.FuncionarioController.list()

GET     /novo_produto                    controllers.ProdutoController.index()
POST    /novo_produto                    controllers.ProdutoController.create()
GET     /produtos                        controllers.ProdutoController.list()

GET     /nova_comanda                    controllers.ComandaController.index()
POST    /nova_comanda                    controllers.ComandaController.create()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.at(path="/public", file)

    